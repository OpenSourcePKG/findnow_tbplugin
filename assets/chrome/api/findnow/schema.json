[
  {
    "namespace": "findnow",
    "types": [
      {
        "id": "SaveToOptions",
        "type": "object",
        "description": "Save to options.",
        "properties": {
          "savefile": {
            "type": "string",
            "description": "File destination for save the eml file."
          },

          "editsubject_subject": {
            "type": "string",
            "description": "Subject from user input.",
            "optional": true
          },

          "editsubject_move_to_trash": {
            "type": "boolean",
            "description": "Move to trash from user input.",
            "optional": true
          }
        }
      },

      {
        "id": "SubjectOptions",
        "type": "object",
        "description": "Subject to options.",
        "properties": {
          "subject": {
            "type": "string",
            "description": "Subject by user input."
          },

          "dirPath": {
            "type": "string",
            "description": "Directory path."
          },

          "use_abbreviation": {
            "type": "boolean",
            "description": "use abbreviation string"
          },

          "abbreviation": {
            "type": "string",
            "description": "Abbreviation string"
          },

          "filenameFormat": {
            "type": "number",
            "description": "Filename format"
          },

          "cutSubject": {
            "type": "boolean",
            "description": "cut the subject short, default use is true"
          },

          "cutFilename": {
            "type": "boolean",
            "description": "cut the filename short, default use is true"
          },

          "filenames_toascii": {
            "type": "boolean",
            "description": "convert the filenames to ascii"
          },

          "use_iso_date": {
            "type": "boolean",
            "description": "user for date generate iso format"
          },

          "add_time_to_name": {
            "type": "boolean",
            "description": "add the time to the filenname"
          },

          "pattern": {
            "type": "string",
            "description": "a pattern string for build filename, only use by filenameFormat = 2"
          }
        }
      }
    ],

    "functions": [
      {
        "name": "getRawSubject",
        "type": "function",
        "description": "Return the raw subject from message ID.",
        "async": true,
        "parameters": [
          {
            "name": "messageId",
            "type": "number",
            "description": "message id"
          }
        ]
      },
      {
        "name": "buildFilename",
        "type": "function",
        "description": "Return the filename from message ID.",
        "async": true,
        "parameters": [
          {
            "name": "messageId",
            "type": "number",
            "description": "message id"
          },
          {
            "name": "options",
            "$ref": "findnow.SubjectOptions"
          }
        ]
      },
      {
        "name": "saveTo",
        "type": "function",
        "description": "Save the email to a eml file.",
        "async": true,
        "parameters": [
          {
            "name": "messageId",
            "type": "number",
            "description": "message id"
          },
          {
            "name": "options",
            "$ref": "findnow.SaveToOptions"
          }
        ]
      },
      {
        "name": "pickPath",
        "type": "function",
        "description": "Pick the path by Dialog.",
        "async": true,
        "parameters": [
          {
            "name": "defaultPath",
            "type": "string",
            "description": "A default path for folder picking."
          },
          {
            "name": "dlgTitle",
            "type": "string",
            "description": "Title for dialog."
          }
        ]
      },

      {
        "name": "joinPath",
        "type": "function",
        "description": "Join 2 paths to a string.",
        "async": true,
        "parameters": [
          {
            "name": "path",
            "type": "string",
            "description": "A main path."
          },
          {
            "name": "subdir",
            "type": "string",
            "description": "A sub path."
          }
        ]
      },

      {
        "name": "existPath",
        "type": "function",
        "description": "Exist a path.",
        "async": true,
        "parameters": [
          {
            "name": "path",
            "type": "string",
            "description": "A path for check."
          }
        ]
      }
    ]
  }
]