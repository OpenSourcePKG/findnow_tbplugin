{
  "name": "FindNow",
  "version": "2.2",
  "description": "Ermöglicht das Exportieren von Nachrichten und Ordnern für FindNow",
  "author": "Stefan Werfling",

  "default_locale": "en-US",

  "applications": {
    "gecko": {
      "id": "findnow@pegenau.de",
      "strict_min_version": "78.0",
      "strict_max_version": "91.*"
    }
  },

  "icons": {
    "64": "chrome/images/findnow.png"
  },

  "experiment_apis": {
    "findnow": {
      "schema": "chrome/api/findnow/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "findnow"
          ]
        ],
        "script": "chrome/api/findnow/implementation.js",
        "events": [
          "startup"
        ]
      }
    }
  },

  "options_ui": {
    "page": "chrome/content/ui/options.html",
    "open_in_tab": true,
    "browser_style": false
  },

  "permissions": [
    "theme",
    "idle",
    "storage"
  ],

  "background": {
    "scripts": [
      "chrome/scripts/background.js"
    ]
  },

  "manifest_version": 2
}